<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.me.sortingarena.MainActivity">

    <Button
        android:text="Bubble Sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:id="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="functionb"
        android:background="?attr/colorAccent"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="Insertion Sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_marginTop="11dp"
        android:id="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="functioni"
        android:background="?attr/colorAccent"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="Quick sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="11dp"
        android:id="@+id/button3"
        android:onClick="functionq"
        android:background="?attr/colorAccent"
        android:textColor="@android:color/background_light"
        />

    <Button
        android:text="Selection Sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="11dp"
        android:id="@+id/button4"
        android:onClick="functions"
        android:background="?attr/colorAccent"
        android:textColor="@android:color/background_light"
        />

    <Button
        android:text="Merge Sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="functionm"
        android:background="?attr/colorAccent"
        android:textColor="@android:color/background_light"
        />

    <TextView
        android:text="Sorting Algorithms"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:fontFamily="serif-monospace"
        android:textColor="?attr/actionModeSplitBackground" />
</RelativeLayout>
